<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imcode.rls.userinfo.mapper.UserInfoMapper">

    <resultMap id="userinfo" type="com.imcode.rls.userinfo.model.UserInfo">
        <result property="id" column="id"/>
        <result property="userName" column="userName"/>
        <result property="userMail" column="userMail"/>
        <result property="userCard" column="userCard"/>
        <association property="userID" column="userID" javaType="com.imcode.rls.user.model.Loginregister"
                     select="getLoginregister"/>
    </resultMap>

    <select id="getLoginregister" resultType="com.imcode.rls.user.model.Loginregister">
        select * from loginregister where userID = #{userID};
    </select>

    <select id="getUserinfo" resultMap="userinfo" parameterType="string">
        select * from userinfo where userID = #{userID}
    </select>

</mapper>